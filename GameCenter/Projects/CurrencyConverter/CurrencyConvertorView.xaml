<Window x:Class="GameCenter.Projects.CurrencyConverter.CurrencyConvertorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCenter.Projects.CurrencyConverter"
        mc:Ignorable="d"
        Title="CurrencyConvertorView" Height="450" Width="800">
    <Grid>
        <Label Content="Amount:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>        <TextBox Name="AmountTextBox" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30,0,0"/>        <Label Content="From Currency:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0"/>        <ComboBox Name="FromCurrencyComboBox" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,90,0,0"/>        <Label Content="To Currency:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="180,70,0,0"/>        <ComboBox Name="ToCurrencyComboBox" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="180,90,0,0"/>        <Button Name="btnConvert" Width="100" Height="30" Content="Convert" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="362,90,0,0" Click="btnConvert_Click"/>        <TextBlock Name="txtResult" Width="280" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,95,30,0"/>
    </Grid>
</Window>
