<Window x:Class="GameCenter.Projects.SniperShootingGame.SniperShootingGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCenter.Projects.SniperShootingGame"
        mc:Ignorable="d"
        Title="SniperShootingGame" Height="450" Width="800">
    <Canvas x:Name="GameCanvas" Focusable="True" Background="LightBlue" MouseLeftButtonDown="ShootDummy" MouseMove="Canvas_MouseMove">
        <Image x:Name="scopeImage" Height="60" Width="60" Panel.ZIndex="999" Canvas.Left="360" Canvas.Top="314"/>
        
        
        <Label x:Name="scoreText" Content="Score: 0" FontSize="14" FontWeight="ExtraBold" Canvas.Left="660" Canvas.Top="65"/>
        <Label x:Name="missText" Content="Missed: 0" FontSize="14" FontWeight="ExtraBold" Canvas.Left="660" Canvas.Top="20"/>


    </Canvas>
</Window>
