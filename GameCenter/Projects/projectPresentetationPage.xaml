<Window x:Class="GameCenter.Projects.projectPresentetationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCenter.Projects"
        mc:Ignorable="d"
        Title="projectPresentetationPage" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>            <ColumnDefinition Width="0.5*" />            <ColumnDefinition Width="1*" />            <ColumnDefinition Width="0.5*" />        </Grid.ColumnDefinitions>        <Grid.RowDefinitions>            <RowDefinition Height="0.4*" />            <RowDefinition Height="0.6*" />            <RowDefinition Height="1.5*" />            <RowDefinition Height="0.3*" />        </Grid.RowDefinitions>

        <Label     x:Name="TitleLabel"    Content="Game Center"     Grid.Row="0"     Grid.Column="0"     Grid.ColumnSpan="3"     Background="AliceBlue"    HorizontalContentAlignment="Center"    VerticalContentAlignment="Center" FontFamily="Arial Black" FontSize="40"/>        <Label     x:Name="DateLabel"    Content="Date"     Grid.Row="0"     Grid.Column="2"     Grid.ColumnSpan="3"     Background="AliceBlue"    HorizontalContentAlignment="Center"    VerticalContentAlignment="Center"     FontFamily="Arial Black"     FontSize="12"/>
        <TextBlock     x:Name="ProjectText"    Grid.Column="1"    Grid.Row="1"    VerticalAlignment="Center"    HorizontalAlignment="Center"    FontSize="16"/>
        <Image     x:Name="ProjectImage"     Grid.Column="1"    Grid.Row="2"    Margin="25"    HorizontalAlignment="Center"    VerticalAlignment="Center" MouseLeftButtonUp="ProjectImage_MouseLeftButtonUp"            />

    </Grid>
</Window>
